{% extends 'base.html.twig' %}

{% block body%}
    <article>
            <h2>{{ drink.name }}</h2>
            <div class="content">
                <div height="200" width="100"><img src="{{ drink.images }}" alt="" height="100%"></div>
                <p>{{ drink.region }}</p>
                <p>{{ drink.description }}</p>
                <p>{{ drink.volume }}L</p>
                <p>{{ drink.price }}EUR</p>
            </div>
    </article>

    <section id="commentaires">
        <h1>Commentaires</h1>
        {% for drinkComment in drink.drinkComments %}
            <div class="comment">
                <div class="row">
                    <div class="col-3">
                        {{ drinkComment.author }} (<small>{{ drinkComment.createdAt | date ('d/m/Y Ã  H:i') }}</small>)
                    </div> 
                    <div class="col-9">
                        {{ drinkComment.content | raw }} {# raw permet de prendre en compte les <br/> du content #}
                    </div>
                </div>
            </div>
            <hr>
        {% endfor %}

        {% if app.user %}
        <h1>Ajouter un commentaire</h1>
        {{ form_start(drinkCommentForm) }}
        {{ form_row(drinkCommentForm.author, {'label': 'Auteur', 'attr': {'palceholder': 'Votre nom'}})}}
        {{ form_row(drinkCommentForm.content, {'label': 'Commentaire', 'attr': {'palceholder': 'Votre commentaire'}})}}
        <button class="btn btn-success">Envoyer</button>
        {{ form_end(drinkCommentForm) }}

        {% else %}
        <h4>Pour laisser un commentaire, merci de vous connecter</h4>
        <a href="{{ path('security_login') }}"><button class="btn btn-secondary">Se connecter</button></a>
        {% endif %}

    </section>
{% endblock %}