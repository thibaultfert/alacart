{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="container min-content-height d-flex justify-content-center align-items-center">
        <div class="row w-100 d-flex flex-column justify-content-center border border-secondary rounded">
            <div class="col-12">
                <h1>Connexion</h1>
                <form action="{{ path('security_login') }}" method="post">
                    <div class="form-group">
                        <label for="_username">Email :</label><br/>
                        <input class="form-control" placeholder="Adresse email" required name="_username" type="email">
                    </div>
                    <div class="form-group">
                        <label for="_password">Mot de passe :</label><br/>
                        <input class="form-control" placeholder="Mot de passe" required name="_password" type="password">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-success">Se connecter</button>
                    </div>
                </form>
            </div> 
            <div class="col-12">
                <p>Si vous n'avez pas encore de compte, <strong><a href="{{ path('security_registration') }}" class="text-info active_link">incrivez-vous ici</a></strong> !</p>
            </div>
        </div>
    </div>
{% endblock %}

